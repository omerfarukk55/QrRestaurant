@model IEnumerable<RestaurantQRSystem.Models.Product>
@{
    ViewData["Title"] = "Ürünler";
    Layout = "_AdminLayout";
}

<h1>Ürün Yönetimi</h1>
<a asp-action="Create" class="btn btn-primary mb-3">Yeni Ürün Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            <th>Durum</th>
            <th>Görsel</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Category?.Name</td>
                <td>@p.Price.ToString("C2")</td>
                <td>@(p.IsAvailable ? "Aktif" : "Pasif")</td>
                <td>
                    @if (!string.IsNullOrEmpty(p.ImageUrl))
                    {
                        <img src="@p.ImageUrl" width="50" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>