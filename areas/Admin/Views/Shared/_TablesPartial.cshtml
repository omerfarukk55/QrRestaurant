@model List<RestaurantQRSystem.ViewModels.TableDetailsViewModel>

<div class="row">
    @foreach (var table in Model)
    {
        // TableDetailsViewModel'daki aynı kontrol mantığı kullanılıyor
        bool isReallyOccupied = table.IsOccupied && table.OrderItems.Any();

        string cardClass = isReallyOccupied ? "bg-danger text-white" : "bg-success text-white";

        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card @cardClass table-card"
                 data-table-id="@table.Id"
                 style="cursor: pointer;">
                <div class="card-body">
                    <h5 class="card-title">@table.Name</h5>

                    <div class="mb-2">
                        @if (isReallyOccupied)
                        {
                            <span class="badge bg-warning text-dark">Dolu</span>
                            @if (table.CurrentOrderId.HasValue)
                            {
                                <span class="badge bg-info ms-1">Sipariş #@table.CurrentOrderId</span>
                            }
                        }
                        else
                        {
                            <span class="badge bg-light text-dark">Boş</span>
                        }
                    </div>

                    @if (isReallyOccupied)
                    {
                        @if (table.TotalAmount > 0)
                        {
                            <p class="card-text mb-1">
                                Toplam: @table.TotalAmount.ToString("C2")
                            </p>
                        }
                        @if (table.OccupiedSince.HasValue)
                        {
                            <small class="text-white-50">
                                @table.OccupiedSince.Value.ToString("HH:mm")
                            </small>
                        }
                    }
                    else
                    {
                        <p class="card-text mb-0">QR ile Sipariş</p>
                    }
                </div>
            </div>
        </div>
    }
</div>