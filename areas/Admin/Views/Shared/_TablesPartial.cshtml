@using RestaurantQRSystem.ViewModels
@model List<TableStatusViewModel>

<div class="mb-4">
    <h4>Masalar</h4>
    <div class="d-flex flex-wrap gap-2">
        @if (Model != null && Model.Any())
        {
            foreach (var table in Model)
            {
                string statusClass = table.IsOccupied ? "bg-danger" : "bg-success";
                string statusText = table.IsOccupied ? "Dolu" : "Boş";

                <div class="card text-white mb-2 table-card"
                     style="min-width: 150px; max-width: 200px;"
                     id="table-@table.Id"
                     data-table-id="@table.Id"
                     data-table-name="@table.Name"
                     data-table-status="@statusText"
                     data-table-amount="@(table.TotalAmount > 0 ? table.TotalAmount.ToString("F2") : "0.00")"
                     data-table-orderid="@table.CurrentOrderId">
                    <div class="card-header @statusClass py-1 px-2">
                        <h5 class="card-title mb-0 d-flex justify-content-between align-items-center">
                            <span>@table.Name</span>
                            <span class="badge bg-light text-dark">@statusText</span>
                        </h5>
                    </div>
                    <div class="card-body p-2 @statusClass">
                        @if (table.IsOccupied)
                        {
                            <div class="d-flex flex-column">
                                <small>Sipariş #@table.CurrentOrderId</small>
                                @if (table.OccupiedSince.HasValue)
                                {
                                    <small>Süre: @((DateTime.Now - table.OccupiedSince.Value).ToString(@"hh\:mm"))</small>
                                }
                                @if (table.TotalAmount > 0)
                                {
                                    <div class="mt-1 fw-bold">
                                        Toplam: @table.TotalAmount.ToString("C2")
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center">
                                <i class="fas fa-qrcode fa-2x mb-2"></i>
                                <small>QR ile Sipariş</small>
                            </div>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info w-100">
                Görüntülenecek masa bulunamadı.
            </div>
        }
    </div>
</div>