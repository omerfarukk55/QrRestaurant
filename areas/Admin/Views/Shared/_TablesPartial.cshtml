@using RestaurantQRSystem.Models.Enums
@model List<RestaurantQRSystem.ViewModels.TableDetailsViewModel>

<!-- Mevcut View kodu devam eder -->
<div class="row">
    @foreach (var table in Model)
    {
        var activeOrders = table.Orders;

        <div class="col-md-3 mb-4">
            <div class="card @(table.Status == TableStatus.Available ? "bg-success" : "bg-primary") text-white">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Masa @table.Name</h5>

                    @if (activeOrders != null && activeOrders.Any())
                    {
                        <span class="badge bg-danger rounded-pill">@activeOrders.Count Sipariş</span>
                    }
                </div>
                <div class="card-body bg-white text-dark">
                    @if (activeOrders != null && activeOrders.Any())
                    {
                        <div class="mb-3">
                            <strong>Aktif Siparişler:</strong>
                            <ul class="list-group mt-2">
                                @foreach (var order in activeOrders)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            Sipariş #@order.Id
                                            <small class="d-block text-muted">
                                                @(string.IsNullOrEmpty(order.CustomerName) ? "Misafir" : order.CustomerName)
                                            </small>
                                        </div>
                                        <span class="badge bg-@(order.Status == OrderStatus.Received ? "primary" :
                                                           order.Status == OrderStatus.Preparing ? "warning" :
                                                           order.Status == OrderStatus.Ready ? "success" : "secondary")">
                                            @order.Status.ToString()
                                        </span>
                                    </li>
                                }
                            </ul>
                        </div>

                        <div>
                            <strong>Toplam Ürün:</strong> @activeOrders.Sum(o => o.OrderItems.Sum(oi => oi.Quantity))
                        </div>
                        <div>
                            <strong>Toplam Tutar:</strong> @activeOrders.Sum(o => o.TotalAmount).ToString("0.00") ₺
                        </div>
                    }
                    else
                    {
                        <p class="text-center mb-0">Bu masada aktif sipariş yok.</p>
                    }
                </div>
                <div class="card-footer bg-white border-top">
                    <a href="@Url.Action("GetTableDetailPartial", "Table", new { id = table.Id, area = "Admin" })"
                       class="btn btn-sm btn-primary w-100"
                       data-bs-toggle="modal"
                       data-table-id="@table.Id"
                       data-bs-target="#tableDetailModal">
                        Detaylar
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<!-- JavaScript ile debug bilgisi -->
<script>
    // Sayfa yüklendiğinde masa bilgilerini konsola yazdır
    document.addEventListener('DOMContentLoaded', function() {
        console.log("Toplam Masa Sayısı:", @Model.Count);
        
        @foreach (var table in Model)
        {
            <text>console.log("Masa @table.Id (@table.Name): Sipariş Sayısı = @table.Orders.Count");</text>
        }
    });
</script>