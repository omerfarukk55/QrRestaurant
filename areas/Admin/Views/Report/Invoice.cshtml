@model Order
@{
    ViewData["Title"] = $"Fatura #{Model.Id}";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Fatura Detayları</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Raporlar</a></li>
        <li class="breadcrumb-item active">Fatura #@Model.Id</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-file-invoice me-1"></i>
                Fatura #@Model.Id
            </div>
            <div>
                <button class="btn btn-sm btn-primary" onclick="printInvoice()">
                    <i class="fas fa-print me-1"></i> Yazdır
                </button>
                <a asp-action="Index" class="btn btn-sm btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Geri
                </a>
            </div>
        </div>
        <div class="card-body" id="invoiceContent">
            <div class="row mb-4">
                <div class="col-12 text-center mb-4">
                    <h3>RESTORAN ADI</h3>
                    <p>Adres Bilgileri, Telefon, Vergi No vs.</p>
                </div>
                
                <div class="col-sm-6">
                    <h5>Fatura Bilgileri:</h5>
                    <p>
                        <strong>Fatura No:</strong> @Model.Id<br />
                        <strong>Tarih:</strong> @Model.OrderDate.ToString("dd.MM.yyyy HH:mm")<br />
                        <strong>Masa:</strong> @Model.Table.Name<br />
                        <strong>Müşteri:</strong> @(string.IsNullOrEmpty(Model.CustomerName) ? "Misafir" : Model.CustomerName)
                    </p>
                </div>
                
                <div class="col-sm-6 text-sm-end">
                    <h5>Ödeme Bilgileri:</h5>
                    <p>
                        <strong>Durum:</strong> Ödendi<br />
                        <strong>Ödeme Yöntemi:</strong> Nakit<br />
                        <strong>Ödeme Tarihi:</strong> @DateTime.Now.ToString("dd.MM.yyyy HH:mm")
                    </p>
                </div>
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Ürün</th>
                                        <th class="text-center">Adet</th>
                                        <th class="text-end">Birim Fiyat</th>
                                        <th class="text-end">Toplam</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.OrderItems.Count; i++)
                                    {
                                        var item = Model.OrderItems.ElementAt(i);
                                        <tr>
                                            <td>@(i + 1)</td>
                                            <td>@item.Product.Name</td>
                                            <td class="text-center">@item.Quantity</td>
                                            <td class="text-end">@item.UnitPrice.ToString("N2")₺</td>
                                            <td class="text-end">@((item.UnitPrice * item.Quantity).ToString("N2"))₺</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="4" class="text-end">Ara Toplam:</th>
                                        <th class="text-end">@Model.TotalAmount.ToString("N2")₺</th>
                                    </tr>
                                    <tr>
                                        <th colspan="4" class="text-end">KDV (8%):</th>
                                        <th class="text-end">@((Model.TotalAmount * 0.08m).ToString("N2"))₺</th>
                                    </tr>
                                    <tr>
                                        <th colspan="4" class="text-end">Genel Toplam:</th>
                                        <th class="text-end">@((Model.TotalAmount * 1.08m).ToString("N2"))₺</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.CustomerNote))
                {
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="alert alert-info">
                                <strong>Müşteri Notu:</strong> @Model.CustomerNote
                            </div>
                        </div>
                    </div>
                }

                <div class="row">
                    <div class="col-12">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h5>Teşekkürler!</h5>
                                <p class="mb-0">Bizi tercih ettiğiniz için teşekkür ederiz.</p>
                            </div>
                            <div class="text-end">
                                <img src="~/images/qr-code.png" alt="QR Code" style="max-width: 100px;" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script>
            function printInvoice() {
                const printContents = document.getElementById('invoiceContent').innerHTML;
                const originalContents = document.body.innerHTML;

                document.body.innerHTML = `
                    <html>
                    <head>
                        <title>Fatura #@Model.Id</title>
                        <style>
                            body { font-family: Arial, sans-serif; margin: 20px; }
                            .text-center { text-align: center; }
                            .text-end { text-align: right; }
                            .mb-4 { margin-bottom: 20px; }
                            table { width: 100%; border-collapse: collapse; margin-bottom: 20px; }
                            th, td { padding: 8px; border-bottom: 1px solid #ddd; }
                            th { background-color: #f2f2f2; }
                        </style>
                    </head>
                    <body>
                        ${printContents}
                    </body>
                    </html>
                `;

                window.print();
                document.body.innerHTML = originalContents;
            }
        </script>
    }
