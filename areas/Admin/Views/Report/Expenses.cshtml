@using RestaurantQRSystem.Extensions
@model Expense
@{
    ViewData["Title"] = "Gider Ekle";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Gider Ekle</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Raporlar</a></li>
        <li class="breadcrumb-item active">Gider Ekle</li>
    </ol>

    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-money-bill-wave me-1"></i>
                    Yeni Gider Kaydı
                </div>
                <div class="card-body">
                    <form asp-action="AddExpense" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Açıklama</label>
                            <input asp-for="Description" class="form-control" required />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">Tutar (₺)</label>
                            <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0.01" required />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Date" class="form-label">Tarih</label>
                            <input asp-for="Date" class="form-control" type="date" required />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label">Kategori</label>
                            <select asp-for="Category" class="form-select" asp-items="Html.GetEnumSelectList<ExpenseCategory>()">
                                <option value="">-- Kategori Seçin --</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-info-circle me-1"></i>
                    Gider Kategorileri
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Kategori</th>
                                <th>Açıklama</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ExpenseCategory category in Enum.GetValues(typeof(ExpenseCategory)))
                            {
                                <tr>
                                    <td>@category.GetDisplayName()</td>
                                    <td>
                                        @switch (category)
                                        {
                                            case ExpenseCategory.FoodPurchase:
                                                <text>Mutfak için gıda ürünleri alımları</text>
                                                break;
                                            case ExpenseCategory.BeveragePurchase:
                                                <text>İçecek ürünleri alımları</text>
                                                break;
                                            case ExpenseCategory.Salary:
                                                <text>Personel maaş ve ödemeleri</text>
                                                break;
                                            case ExpenseCategory.Rent:
                                                <text>İşletme kira giderleri</text>
                                                break;
                                            case ExpenseCategory.Electricity:
                                                <text>Elektrik faturaları</text>
                                                break;
                                            case ExpenseCategory.Water:
                                                <text>Su faturaları</text>
                                                break;
                                            case ExpenseCategory.Gas:
                                                <text>Doğalgaz faturaları</text>
                                                break;
                                            case ExpenseCategory.Internet:
                                                <text>İnternet ve telefon giderleri</text>
                                                break;
                                            case ExpenseCategory.Advertising:
                                                <text>Reklam ve tanıtım giderleri</text>
                                                break;
                                            case ExpenseCategory.Maintenance:
                                                <text>Bakım, onarım ve yenileme giderleri</text>
                                                break;
                                            case ExpenseCategory.Other:
                                                <text>Diğer giderler</text>
                                                break;
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}