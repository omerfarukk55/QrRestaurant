@using RestaurantQRSystem.ViewModels
@model TableDetailsViewModel
@{
    ViewData["Title"] = "Masa Detayı";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-6">
        <h3>@Model.Name</h3>
        <p>
            Durum:
            @if (Model.IsOccupied)
            {
                <span class="badge bg-danger">Dolu</span>
            }
            else
            {
                <span class="badge bg-success">Boş</span>
            }
        </p>

        @if (Model.IsOccupied && Model.OccupiedSince.HasValue)
        {
            <p>Başlangıç: @Model.OccupiedSince.Value.ToString("dd.MM.yyyy HH:mm")</p>
        }

        @if (Model.CurrentOrderId.HasValue)
        {
            <p>Sipariş No: #@Model.CurrentOrderId</p>
        }
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Index" asp-controller="Dashboard" asp-area="Admin" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Dashboard'a Dön
        </a>
    </div>
</div>

<hr />

@if (Model.IsOccupied && Model.OrderItems.Any())
{
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Sipariş Detayları</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Ürün</th>
                            <th class="text-center">Adet</th>
                            <th class="text-end">Birim Fiyat</th>
                            <th class="text-end">Toplam</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-end">@item.UnitPrice.ToString("C2")</td>
                                <td class="text-end">@item.TotalPrice.ToString("C2")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="3" class="text-end">Genel Toplam:</th>
                            <th class="text-end">@Model.TotalAmount.ToString("C2")</th>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <form asp-action="CompleteAndClear" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" name="TableId" />
                <input type="hidden" asp-for="CurrentOrderId" name="OrderId" />

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success btn-lg"
                            onclick="return confirm('Bu siparişi tamamlamak ve masayı boşaltmak istediğinize emin misiniz?')">
                        <i class="fas fa-check-circle"></i> Siparişi Tamamla ve Masayı Boşalt
                    </button>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <h5>Bu masada aktif sipariş bulunmuyor.</h5>
        <p>Bu masa şu anda boş veya sipariş bekliyor.</p>
    </div>
}