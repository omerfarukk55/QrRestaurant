@model RestaurantQRSystem.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<h1>Yönetici Paneli</h1>
<hr />

<!-- Masalar Durum Alanı -->
@await Html.PartialAsync("_TablesPartial", Model.TableList)
@Html.AntiForgeryToken()

<!-- Table Detail Modal -->
<div class="modal fade" id="tableDetailModal" tabindex="-1" aria-labelledby="tableDetailModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tableDetailModalLabel">Masa Detayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <button type="button" id="btnCompleteOrder" class="btn btn-success">
                    Siparişi Tamamla ve Ödendi İşaretle
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Masalar Durum Alanı Sonu -->
<!-- İstatistikler -->
<div class="row">
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Kategori</h5>
                <p class="card-text display-4">@Model.AdminStats.TotalCategories</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Ürün</h5>
                <p class="card-text display-4">@Model.AdminStats.TotalProducts</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Masa</h5>
                <p class="card-text display-4">@Model.AdminStats.TotalTables</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Bugün Aldığın Sipariş</h5>
                <p class="card-text display-4">@Model.AdminStats.CompletedOrders</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title text-info">Yeni Siparişler</h5>
                <p class="card-text display-4">@Model.AdminStats.NewOrders</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title text-warning">Hazırlanıyor</h5>
                <p class="card-text display-4">@Model.AdminStats.ProcessingOrders</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title text-success">Tamamlanan</h5>
                <p class="card-text display-4">@Model.AdminStats.CompletedOrders</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title text-primary">Bugünkü Ciro</h5>
                <p class="card-text display-4">@Model.AdminStats.TodayRevenue.ToString("C2")</p>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Masa kartlarına tıklandığında
        document.querySelectorAll('.table-card').forEach(card => {
            card.addEventListener('click', function() {
                const tableId = this.getAttribute('data-table-id');
                openTableModal(tableId);
            });
        });

        // Sipariş tamamlama butonu işlemi (modalda)
        document.getElementById('btnCompleteOrder').addEventListener('click', function() {
            // Form oluşturulduysa submit işlemi yapılır
            const form = document.getElementById('completeOrderForm');
            if (form && !this.classList.contains('disabled')) {
                    form.submit();
            }
        });
    });

    function openTableModal(tableId) {
        // Modal nesnesini oluştur
        const modalElement = document.getElementById('tableDetailModal');
        const modal = new bootstrap.Modal(modalElement);

        // Modal body'i ve tamamlama butonunu seç
        const modalBody = modalElement.querySelector('.modal-body');
        const completeOrderBtn = document.getElementById('btnCompleteOrder');

        // Yükleniyor göster
        modalBody.innerHTML = `
            <div class="text-center p-5">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Yükleniyor...</span>
                </div>
            </div>
        `;

        // Tamamlama butonunu devre dışı bırak (veriler gelmeden)
        completeOrderBtn.classList.add('disabled');

        // Modalı göster
        modal.show();

        // Masa detaylarını getir
        fetch(`/Admin/Table/GetTableDetailPartial/${tableId}`)
            .then(response => {
                if (!response.ok) {
                    throw new Error('Masa bilgileri alınamadı');
                }
                return response.text();
            })
            .then(html => {
                // Modal içeriğini güncelle
                modalBody.innerHTML = html;

                // Form varsa butonu aktifleştir
                const form = document.getElementById('completeOrderForm');
                if (form) {
                    completeOrderBtn.classList.remove('disabled');
                }
            })
            .catch(error => {
                console.error('Hata:', error);
                modalBody.innerHTML = `
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle"></i> Masa bilgileri yüklenirken bir hata oluştu.
                    </div>
                `;
            });
    }
</script>