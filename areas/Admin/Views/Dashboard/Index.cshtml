@model RestaurantQRSystem.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<h1>Yönetici Paneli</h1>
<hr />
<div id="tables-container">
<!-- Masalar Durum Alanı -->
@await Html.PartialAsync("_TablesPartial", Model.TableList)
 </div>
@Html.AntiForgeryToken()

<!-- Table Detail Modal -->
<div class="modal fade" id="tableDetailModal" tabindex="-1" aria-labelledby="tableDetailModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tableDetailModalLabel">Masa Detayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <button type="button" id="btnCompleteOrder" class="btn btn-success">
                    Siparişi Tamamla ve Ödendi İşaretle
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Masalar Durum Alanı Sonu -->
<!-- İstatistikler -->
<div class="row">
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Kategori</h5>
                <p class="card-text display-4">@Model.AdminStats.TotalCategories</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Ürün</h5>
                <p class="card-text display-4">@Model.AdminStats.TotalProducts</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Masa</h5>
                <p class="card-text display-4">@Model.AdminStats.TotalTables</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Bugün Aldığın Sipariş</h5>
                <p class="card-text display-4">@Model.AdminStats.CompletedOrders</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title text-info">Yeni Siparişler</h5>
                <p class="card-text display-4">@Model.AdminStats.NewOrders</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title text-warning">Hazırlanıyor</h5>
                <p class="card-text display-4">@Model.AdminStats.ProcessingOrders</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title text-success">Tamamlanan</h5>
                <p class="card-text display-4">@Model.AdminStats.CompletedOrders</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title text-primary">Bugünkü Ciro</h5>
                <p class="card-text display-4">@Model.AdminStats.TodayRevenue.ToString("C2")</p>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Masa detay modalı referansı
        const modalElement = document.getElementById('tableDetailModal');

        // Modal açılmadan önce tetiklenir
        modalElement.addEventListener('show.bs.modal', function(event) {
            // Tıklanan butondan table-id bilgisini al (data-bs-* ile geçirilmiş olmalı)
             const button = event.relatedTarget;
             const tableId = button.getAttribute('data-table-id') || button.href.split('/').pop();
            const url = `/Admin/Table/GetTableDetailPartial/${tableId}`;
            // Modal body'i seç
            const modalBody = this.querySelector('.modal-body');

            // Yükleniyor göster
            modalBody.innerHTML = `
                <div class="text-center p-5">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                </div>
            `;

            // Masa detaylarını getir
            fetch(url)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Masa bilgileri alınamadı');
                    }
                    return response.text();
                })
                .then(html => {
                    // Modal içeriğini güncelle
                    modalBody.innerHTML = html;
                })
                .catch(error => {
                    console.error('Hata:', error);
                    modalBody.innerHTML = `
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle me-2"></i> Masa bilgileri yüklenirken bir hata oluştu.
                        </div>
                    `;
                });
        });

        // Global tamamlama butonunu kaldıralım çünkü her sipariş için ayrı işlem düğmeleri var
        const completeOrderBtn = document.getElementById('btnCompleteOrder');
        if (completeOrderBtn) {
            completeOrderBtn.style.display = 'none'; // veya tamamen kaldırılabilir
        }
    });
</script>