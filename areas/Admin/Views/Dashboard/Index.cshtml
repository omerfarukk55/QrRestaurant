@model RestaurantQRSystem.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}
<h1>Yönetici Paneli</h1>
<hr />
<!-- Masalar Durum Alanı -->
@await Html.PartialAsync("_TablesPartial", Model.TableList)

<!-- Table Detail Modal -->
<div class="modal fade" id="tableDetailModal" tabindex="-1" aria-labelledby="tableDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tableDetailModalLabel">Masa Detayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5 id="modalTableName"></h5>
                        <p>Durum: <span id="modalTableStatus" class="badge"></span></p>
                        <p id="modalOrderInfo">Sipariş No: <span id="modalOrderId"></span></p>

                        <!-- Ödeme Durumu Gösterimi -->
                        <div class="mt-3" id="paymentStatusContainer">
                            <h6>Ödeme Durumu</h6>
                            <div class="d-flex align-items-center" id="paymentStatusBox">
                                <div class="spinner-border spinner-border-sm text-primary me-2" role="status" id="paymentStatusLoading">
                                    <span class="visually-hidden">Yükleniyor...</span>
                                </div>
                                <span class="badge" id="paymentStatusBadge">Yükleniyor...</span>
                            </div>
                            <div class="small text-muted mt-1" id="paymentDetails"></div>
                        </div>

                        <div id="tableQrCodeContainer" class="text-center mb-3 mt-3">
                            <img id="tableQrCode" src="" alt="Masa QR Kodu" class="img-fluid" style="max-width: 200px;">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div id="orderItemsContainer">
                            <h6>Sipariş Detayları</h6>
                            <div id="orderItemsList"></div>
                            <hr>
                            <h5>Toplam: <span id="modalTotalAmount"></span></h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <button type="button" id="btnPrintReceipt" class="btn btn-info">Fiş Yazdır</button>
                <button type="button" id="btnProcessPayment" class="btn btn-primary">Ödeme Al</button>
                <button type="button" id="btnRefundPayment" class="btn btn-warning d-none">Ödeme İade Et</button>
                <button type="button" id="btnClearTable" class="btn btn-success">Masayı Boşalt</button>
            </div>
        </div>
    </div>
</div>

<!-- Ödeme Metodu Modal -->
<div class="modal fade" id="paymentMethodModal" tabindex="-1" aria-labelledby="paymentMethodModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="paymentMethodModalLabel">Ödeme İşlemi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="paymentMethod" class="form-label">Ödeme Yöntemi:</label>
                    <select id="paymentMethod" class="form-select">
                        <option value="Nakit">Nakit</option>
                        <option value="Kredi Kartı">Kredi Kartı</option>
                        <option value="Banka Kartı">Banka Kartı</option>
                        <option value="Mobil Ödeme">Mobil Ödeme</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="paidAmount" class="form-label">Ödenen Tutar:</label>
                    <div class="input-group">
                        <input type="number" id="paidAmount" class="form-control" step="0.01" min="0">
                        <span class="input-group-text">₺</span>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="paymentNotes" class="form-label">Notlar:</label>
                    <textarea id="paymentNotes" class="form-control" rows="2" placeholder="Ödeme ile ilgili notlar..."></textarea>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="completeOrderCheck" checked>
                    <label class="form-check-label" for="completeOrderCheck">
                        Ödeme sonrası siparişi tamamla ve masayı boşalt
                    </label>
                </div>

                <div class="alert alert-info" id="changeAmount" style="display: none;">
                    <div class="d-flex justify-content-between align-items-center">
                        <span>Para Üstü:</span>
                        <span id="changeAmountValue" class="fw-bold fs-5">0.00 ₺</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-success" id="confirmPayment">Ödemeyi Tamamla</button>
            </div>
        </div>
    </div>
</div>

<!-- İade Modal -->
<div class="modal fade" id="refundModal" tabindex="-1" aria-labelledby="refundModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="refundModalLabel">Ödeme İadesi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Bu işlem, seçili ödemeyi iade olarak işaretleyecektir. Bu işlem geri alınamaz.
                </div>

                <div class="mb-3">
                    <label for="refundReason" class="form-label">İade Nedeni:</label>
                    <textarea id="refundReason" class="form-control" rows="3" placeholder="İade nedeni..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-danger" id="confirmRefund">İade Et</button>
            </div>
        </div>
    </div>
</div>
<!-- Masalar Durum Alanı Sonu -->
<div class="row">
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Kategori</h5>
                <p class="card-text display-4">@Model.AdminStats.TotalCategories</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Ürün</h5>
                <p class="card-text display-4">@Model.AdminStats.TotalProducts</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Masa</h5>
                <p class="card-text display-4">@Model.AdminStats.TotalTables</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Bugün Aldığın Sipariş</h5>
                <p class="card-text display-4">@Model.AdminStats.CompletedOrders</p>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title text-info">Yeni Siparişler</h5>
                <p class="card-text display-4">@Model.AdminStats.NewOrders</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title text-warning">Hazırlanıyor</h5>
                <p class="card-text display-4">@Model.AdminStats.ProcessingOrders</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title text-success">Tamamlanan</h5>
                <p class="card-text display-4">@Model.AdminStats.CompletedOrders</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title text-primary">Bugünkü Ciro</h5>
                <p class="card-text display-4">@Model.AdminStats.TodayRevenue.ToString("C2")</p>
            </div>
        </div>
    </div>
</div>

