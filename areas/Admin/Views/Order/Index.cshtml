@model IEnumerable<RestaurantQRSystem.Models.Order>
@{
    ViewData["Title"] = "Siparişler";
    Layout = "_AdminLayout";
}

<h1>Siparişler</h1>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Masa</th>
            <th>Tarih</th>
            <th>Durum</th>
            <th>Tutar</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Table?.Name</td>
                <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    @order.Status
                </td>
                <td>@order.TotalAmount.ToString("C2")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary btn-sm">
                        <i class="fas fa-search"></i> Detaylar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>