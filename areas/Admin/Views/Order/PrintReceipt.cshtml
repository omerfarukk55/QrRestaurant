@model RestaurantQRSystem.ViewModels.OrderPrintViewModel

@{
    ViewData["Title"] = "Sipariş Yazdır #" + Model.Order.Id;
    Layout = null; // Often print views have no layout
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        /* Add your print styles here */
        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
            margin: 0;
            padding: 10px;
        }
        .header {
            text-align: center;
            margin-bottom: 15px;
        }
        .restaurant-logo {
            max-height: 60px;
            margin-bottom: 5px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 5px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        .total {
            font-weight: bold;
            text-align: right;
            margin-top: 10px;
        }
        @@media print {
            @@page { margin: 0.5cm; }
        }
    </style>
</head>
<body>
    <div class="header">
        @if (Model.RestaurantInfo != null)
        {
            @if (Model.RestaurantInfo.ShowLogo && !string.IsNullOrEmpty(Model.RestaurantInfo.LogoUrl))
            {
                <img src="@Model.RestaurantInfo.LogoUrl" alt="@Model.RestaurantInfo.RestaurantName" class="restaurant-logo" />
            }
            <h2>@Model.RestaurantInfo.RestaurantName</h2>
            <p>@Model.RestaurantInfo.Address</p>
            <p>@Model.RestaurantInfo.Phone</p>
        }
        <h3>Sipariş #@Model.Order.Id</h3>
        <p>Tarih: @Model.Order.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
        <p>Masa: @Model.Order.Table.Name</p>
    </div>

    <table>
        <thead>
            <tr>
                <th>Ürün</th>
                <th>Adet</th>
                <th>Fiyat</th>
                <th>Toplam</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Order.OrderItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("N2") @(Model.RestaurantInfo?.Currency ?? "₺")</td>
                    <td>@((item.UnitPrice * item.Quantity).ToString("N2")) @(Model.RestaurantInfo?.Currency ?? "₺")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="total">
        <p>Toplam Tutar: @Model.Order.TotalAmount.ToString("N2") @(Model.RestaurantInfo?.Currency ?? "₺")</p>
    </div>

    <script>
        // Auto-print when the page loads
        window.onload = function() {
            window.print();
        }
    </script>
</body>
</html>