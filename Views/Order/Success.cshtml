@model RestaurantQRSystem.Models.Order

@{
    ViewData["Title"] = "Sipariş Alındı";
    Layout = "~/Views/Shared/_Layout.cshtml"; // veya null; kullanacağınız layout'a göre
}

<!-- Tailwind CSS eklentisi (eğer layout'ta yoksa) -->
<script src="https://cdn.tailwindcss.com"></script>

<div class="max-w-4xl mx-auto px-4 py-10 animate-fadeIn">
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
        <!-- Üst Kısım -->
        <div class="pt-10 pb-6 px-6 text-center bg-gradient-to-b from-green-50 to-white">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-green-100 text-green-600 rounded-full mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
            </div>

            <h2 class="text-3xl font-bold text-gray-800 mb-2">Siparişiniz Alındı!</h2>
            <p class="text-gray-600 mb-6">Sipariş numaranız: <span class="font-semibold text-gray-800">@Model.Id</span></p>

            <!-- Sipariş Bilgileri Kartı -->
            <div class="max-w-3xl mx-auto">
                <div class="bg-white border border-gray-200 rounded-xl shadow-md overflow-hidden">
                    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                        <div class="flex justify-between items-center">
                            <div class="flex items-center space-x-2">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2" />
                                </svg>
                                <span class="text-gray-700 font-medium">Masa: @Model.Table.Name</span>
                            </div>
                            <div class="flex items-center space-x-2">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <span class="text-gray-700 font-medium">@Model.OrderDate.ToString("dd.MM.yyyy HH:mm")</span>
                            </div>
                        </div>
                    </div>

                    <div class="p-6">
                        <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                            </svg>
                            Sipariş Detayları
                        </h3>

                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200 border border-gray-200 rounded-lg overflow-hidden">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ürün</th>
                                        <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Adet</th>
                                        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Fiyat</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    @foreach (var item in Model.OrderItems)
                                    {
                                        <tr class="hover:bg-gray-50 transition-colors">
                                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">@item.Product.Name</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center">@item.Quantity</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 text-right">@((item.UnitPrice * item.Quantity).ToString("0.00"))₺</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="bg-gray-50">
                                    <tr>
                                        <th colspan="2" class="px-6 py-3 text-right text-sm font-bold text-gray-700">Toplam:</th>
                                        <th class="px-6 py-3 text-right text-sm font-bold text-blue-700">@Model.TotalAmount.ToString("0.00")₺</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.CustomerNote))
                        {
                            <div class="mt-6 bg-blue-50 border-l-4 border-blue-400 p-4 rounded-md">
                                <div class="flex">
                                    <div class="flex-shrink-0">
                                        <svg class="h-5 w-5 text-blue-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                                        </svg>
                                    </div>
                                    <div class="ml-3">
                                        <h4 class="text-sm font-medium text-blue-800">Sipariş Notu</h4>
                                        <p class="text-sm text-blue-700 mt-1">@Model.CustomerNote</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Alt Kısım - Buton -->
        <div class="bg-gray-50 px-6 py-6">
            <div class="max-w-xl mx-auto">
                <a href="/Menu/Scan/@Model.Table.Name?tableId=@Model.TableId"
                   class="flex items-center justify-center bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-medium py-3 px-6 rounded-lg shadow-md hover:shadow-lg transition-all duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                    Menüye Dön
                </a>

                <!-- Opsiyonel: Yeni sipariş oluştur butonu -->
                <p class="text-center text-gray-500 text-sm mt-4">
                    Siparişiniz kısa süre içinde hazırlanacaktır. Afiyet olsun!
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fadeIn {
        animation: fadeIn 0.6s ease-out forwards;
    }

    }
</style>