@model RestaurantQRSystem.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card-counter primary">
            <i class="fa fa-list"></i>
            <span class="count-numbers">@Model.TotalCategories</span>
            <span class="count-name">Kategoriler</span>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card-counter danger">
            <i class="fa fa-utensils"></i>
            <span class="count-numbers">@Model.TotalProducts</span>
            <span class="count-name">Ürünler</span>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card-counter success">
            <i class="fa fa-chair"></i>
            <span class="count-numbers">@Model.TotalTables</span>
            <span class="count-name">Masalar</span>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card-counter info">
            <i class="fa fa-shopping-cart"></i>
            <span class="count-numbers">@Model.TodayOrders</span>
            <span class="count-name">Bugünkü Siparişler</span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Sipariş Durumu</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <h3 class="text-primary">@Model.NewOrders</h3>
                        <p>Yeni</p>
                    </div>
                    <div class="col-md-4 text-center">
                        <h3 class="text-warning">@Model.ProcessingOrders</h3>
                        <p>Hazırlanıyor</p>
                    </div>
                    <div class="col-md-4 text-center">
                        <h3 class="text-success">@Model.CompletedOrders</h3>
                        <p>Tamamlandı</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Bugünkü Gelir</h5>
            </div>
            <div class="card-body text-center">
                <h2 class="text-success">@Model.TodayRevenue.ToString("C")</h2>
                <p>@DateTime.Now.ToString("dd MMMM yyyy")</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Son Siparişler</h5>
                <a asp-controller="Order" asp-action="Index" class="btn btn-sm btn-primary">Tüm Siparişler</a>
            </div>
            <div class="card-body">
                <div id="recentOrders">
                    <p class="text-center">Yükleniyor...</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Son siparişleri yükle
            $.ajax({
                url: '/Order/GetRecentOrders',
                type: 'GET',
                success: function (data) {
                    $("#recentOrders").html(data);
                }
            });
        });
    </script>
}