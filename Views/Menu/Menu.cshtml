@{
    ViewData["Title"] = "Menü";
    Layout = null;
    var table = ViewBag.Table as RestaurantQRSystem.Models.Table;
    var categories = ViewBag.Categories as IEnumerable<dynamic>;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: #f8fafc;
        }

        .category-title {
            border-bottom: 2px solid #224abe;
            font-weight: bold;
            margin: 1.5rem 0 1rem 0;
        }

        .menu-item {
            margin-bottom: 1.5rem;
        }

            .menu-item img {
                width: 100%;
                border-radius: 8px;
                max-height: 140px;
                object-fit: cover;
            }

        .add-to-cart {
            min-width: 120px;
        }
    </style>
</head>
<body>
    <div class="container py-3">
        <h2 class="text-center mb-4">@table.Name - Menü</h2>

        @foreach (var cat in categories)
        {
            <div class="category-title fs-4">@cat.Name</div>
            <div class="row">
                @foreach (var p in cat.Products)
                {
                    <div class="col-12 col-md-6 col-lg-4 menu-item">
                        <div class="card h-100 shadow-sm">
                            @if (!string.IsNullOrEmpty(p.ImageUrl))
                            {
                                <img src="@p.ImageUrl" class="card-img-top" />
                            }
                            <div class="card-body">
                                <h5 class="card-title">@p.Name</h5>
                                <div class="mb-2 text-primary fw-bold">@p.Price.ToString("C2")</div>
                                @if (!string.IsNullOrEmpty(p.Description))
                                {
                                    <p class="card-text small text-muted">@p.Description</p>
                                }
                                <button class="btn btn-outline-success add-to-cart"
                                        data-product-id="@p.Id"
                                        data-product-name="@p.Name"
                                        data-product-price="@p.Price">
                                    Sepete Ekle
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <div class="fixed-bottom bg-light border-top d-flex justify-content-between align-items-center px-3 py-2" style="z-index:999;">
            <span class="fw-bold">Sepet</span>
            <a href="#" class="btn btn-primary" onclick="showCart(); return false;">
                <span class="fa fa-shopping-cart"></span>
                <span class="cart-badge badge bg-danger">0</span>
                <span>Sepeti Görüntüle</span>
            </a>
        </div>
    </div>

    <!-- Sepet Modalı -->
    <div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="cartModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cartModalLabel">Sepetiniz</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body" id="cartSummary">
                    <!-- Sepet içeriği dinamik olarak buraya gelecek -->
                </div>
                <button type="button" onclick="clearCart()" class="btn btn-outline-danger">Sepeti Temizle</button>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <a href="/Order/Create" class="btn btn-success">Siparişi Tamamla</a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/aaa.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js"></script>
</body>
</html>